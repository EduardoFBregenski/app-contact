<div class="d-flex justify-content-between align-items-center">
<h1>Lista de contatos.</h1>
<%= link_to 'Criar novo contato', new_contact_path, class:"btn btn-primary" %>    
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Telefone</th>
      <th scope="col">CEP</th>
      <th class="text-end" scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.id %></td>
      <td><%= contact.name %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.address ? format_cep(contact.address.cep) : '' %></td>
      <td class="text-end"><%= link_to 'Ver detalhes', contact_path(contact),  class:"btn btn-info" %>
      <%= link_to 'Editar', edit_contact_path(contact), class:"btn btn-secondary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>